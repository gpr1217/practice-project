<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.practiceex.ui.SignUpActivity"
    android:layout_gravity="center"
    android:gravity="center_horizontal">

    <EditText
        android:id="@+id/firstname"
        android:layout_width="@dimen/dimen_editext_horizontal"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/firstname"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        />

    <EditText
        android:id="@+id/lastname"
        android:layout_width="@dimen/dimen_editext_horizontal"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/lastname"
        android:layout_marginBottom="10dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/firstname"
        android:layout_toEndOf="@+id/firstname"
        />

    <EditText
        android:id="@+id/username"
        android:layout_width="@dimen/dimen_editext_horizontal"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/username"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/firstname"
        />

    <EditText
        android:id="@+id/password"
        android:layout_width="@dimen/dimen_editext_horizontal"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/password"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/lastname"
        android:paddingStart="5dp"
        android:paddingLeft="5dp"
        android:paddingRight="10dp"
        android:paddingEnd="10dp"
        android:layout_toRightOf="@+id/username"
        android:layout_toEndOf="@+id/username"/>

    <EditText
        android:id="@+id/re_enter_password"
        android:layout_width="@dimen/dimen_editext_horizontal_big"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/re_enter_pwd"
        android:inputType="textPassword"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/password"/>

    <EditText
        android:id="@+id/email"
        android:layout_width="@dimen/dimen_editext_horizontal_big"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/email"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/re_enter_password"/>

    <EditText
        android:id="@+id/phone_number"
        android:layout_width="@dimen/dimen_editext_horizontal_big"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:textColor="#000000"
        android:hint="@string/phone_no"
        android:inputType="phone"
        android:layout_marginBottom="10dp"
        android:layout_below="@+id/email"/>

    <Spinner
        android:id="@+id/department_list"
        android:layout_width="@dimen/dimen_editext_horizontal_big"
        android:layout_height="@dimen/dimen_editext_vertical"
        android:layout_below="@+id/phone_number"
        android:layout_marginBottom="20dp"
        />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="@dimen/dimen_button_horizontal"
        android:layout_height="@dimen/dimen_button_vertical"
        android:text="@string/btn_submit"
        android:gravity="center|center_horizontal"
        android:layout_below="@+id/department_list"
        android:layout_alignRight="@+id/department_list"
        android:layout_alignEnd="@+id/department_list"
        android:layout_marginRight="108dp"
        android:layout_marginEnd="108dp" />

</RelativeLayout>